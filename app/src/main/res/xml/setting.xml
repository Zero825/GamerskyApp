<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="样式相关"
        app:allowDividerAbove="false"
        app:allowDividerBelow="false"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:defaultValue="true"
            android:key="corner"
            android:summary="重启生效"
            android:title="资讯图片圆角"
            app:iconSpaceReserved="false" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="page_both_sides"
            android:summary="重启生效"
            android:title="显示两侧预览"
            app:iconSpaceReserved="false" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="new_image_side"
            android:summary="重启生效"
            android:title="左侧资讯图片"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="资讯相关"
        app:allowDividerAbove="false"
        app:allowDividerBelow="false"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:defaultValue="false"
            android:key="load_comments_count"
            android:summary="关闭以提高加载速度"
            android:title="加载资讯评论数量"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="缓存相关"
        app:allowDividerAbove="false"
        app:allowDividerBelow="false"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:defaultValue="true"
            android:key="auto_clear_cache"
            android:summary="每次启动时清除缓存"
            android:title="自动清除缓存"
            app:iconSpaceReserved="false" />


        <Preference
            android:key="manual_clear_cache"
            android:summary="点击清除缓存"
            android:title="清除缓存"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="关于"
        app:iconSpaceReserved="false"
        app:allowDividerAbove="false"
        app:allowDividerBelow="false">
        <Preference
            android:key="website"
            android:summary="https://github.com/Zero825/GamerskyApp"
            android:title="项目地址"
            app:iconSpaceReserved="false" >
            <intent
               android:data="https://github.com/Zero825/GamerskyApp"
                android:action="android.intent.action.VIEW"/>
        </Preference>>
    </PreferenceCategory>
</PreferenceScreen>